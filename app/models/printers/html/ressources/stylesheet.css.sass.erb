@import "compass"

$column-width: <%= COLUMN_WIDTH %>px
$row-height: <%= ROW_HEIGHT %>px
$period-padding: <%= PERIOD_PADDING %>px
$period-width: $column-width - $period-padding * 2 - 10px

fieldset
  display: block
  margin: 25px
  float: left

.weekly-calendar
  position: relative

  table.backdrop
    th, td
      padding: 0

    th
      width: $column-width
      height: 20px

    th.hour
      width: 50px

    tbody
      tr
        height: $row-height
        font-size: 12px

      tr.hour
        border-top: 1px solid #808080

      tr.half-hour
        border-top: 1px dashed #d3d3d3

  .schedule
    position: absolute
    top: 20px
    left: 50px

    .weekday
      position: absolute
      top: 0
      left: 0

<%= weekday_classes %>

      .period
        position: absolute
        top: 0px
        width: $period-width
        padding: $period-padding
        @include border-radius(5px)

<%= period_colors %>

<%= period_classes %>

        .hour
          margin-bottom: 5px
          font-size: 12px
          font-weight: bold
        .title
          .course
            font-size: 14px
          .type
            font-size: 12px

        &.duration-0100
          height: 26px
          padding: 2px 5px

          .hour
            margin-bottom: 0
            font-size: 10px

          .title
            .course
              font-size: 12px